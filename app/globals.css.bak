@import "tailwindcss";

:root {
  --background: #000000;
  --foreground: #ffffff;
  --accent: #06b6d4;
  /* cyan-500 */
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: var(--background);
}

::-webkit-scrollbar-thumb {
  background: #333;
  border-radius: 5px;
  border: 2px solid var(--background);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--accent);
}

body {
  background: var(--background);
  color: var(--foreground);
  overflow-x: hidden;
}

@layer utilities {
  .animate-marquee-slow {
    animation: marquee 60s linear infinite;
  }

  .animate-marquee-slow-reverse {
    animation: marquee-reverse 60s linear infinite;
  }
}

@keyframes marquee {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-50%);
  }
}

@keyframes marquee-reverse {
  0% {
    transform: translateX(-50%);
  }

  100% {
    transform: translateX(0);
  }
}

/* Hide default cursor on ProfessionalView */
.professional-view {
  cursor: none;
}

.professional-view a,
.professional-view button,
.professional-view [role="button"] {
  cursor: none;
}

/* Responsive adjustments for Criss-Cross */
@media (max-width: 768px) {
  .criss-cross-container {
    opacity: 0.15;
    gap: 4rem;
  }

  .criss-cross-item {
    font-size: 1.5rem !important;
    /* text-2xl */
    line-height: 1;
  }

  .criss-cross-top {
    rotate: 15deg !important;
    scale: 2 !important;
  }

  .criss-cross-bottom {
    rotate: -15deg !important;
    scale: 2 !important;
  }
}